<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
   	android:background="@drawable/background"
    android:layout_height="fill_parent"
>

<ImageView 
	android:src="@drawable/shipment"
	android:scaleType="fitXY"
	android:clickable="true"
	android:text="@string/ship_label" 
	android:id="@+drid/main_Ship" 
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="20dip"
	android:layout_marginTop="70dip"
	android:layout_height="80dip" 
	android:layout_width="130dip">
</ImageView>

<TextView 
	android:text="@string/ship_label" 
	android:textStyle="bold"
	android:layout_width="wrap_content" 
	android:id="@+id/textView1"
	android:layout_marginLeft="20dip"
	android:layout_height="wrap_content" 
	android:layout_below="@+drid/main_Ship" 
	android:layout_alignLeft="@+drid/main_Ship" 
	android:layout_alignRight="@+drid/main_Ship">
</TextView>
	
<Button 
	android:text="@string/list_label" 
	android:id="@+id/main_List"
	android:layout_toRightOf="@+id/main_Ship"
	android:layout_marginTop="70dip" 
	android:layout_marginLeft="20dip"
	android:layout_marginRight="20dip"
	android:layout_height="80dip" 
	android:layout_width="130dip">
</Button>	

<android:ListView 
	android:id="@android:id/list" 
	android:background="@drawable/texture"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:layout_marginTop="30dip"
	android:layout_below="@+id/main_Ship"
	android:cacheColorHint="@color/nope"/>

<android:TextView
	android:id="@android:id/empty"
	android:text="@string/no_notifications"
	android:textColor="@color/light"
	android:textSize="13pt"
	android:layout_below="@+id/main_Ship"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="45dip"
	android:layout_marginTop="140dip"
/>

</RelativeLayout>